<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WeatherTestApp.View.Weather.WeatherByTownPage"
    xmlns:Resource="clr-namespace:WeatherTestApp.Resources.Languages" 
    xmlns:viewModelBase="clr-namespace:Xamarin.Forms.MVVM.ViewModel.Base;assembly=Xamarin.Forms.MVVM"
    viewModelBase:ViewModelLocator.AutoWireViewModel="true"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="true"
    Title="{x:Static Resource:ApplicationResource.WeatherByTownPage_Title}">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Town}" Placeholder="{x:Static Resource:ApplicationResource.FavouriteTownsPage_TownEntryPlaceholder}"/>
            <Button Command="{Binding SearchCommand}" Text="{x:Static Resource:ApplicationResource.FavouriteTownsPage_Search}"/>
            <ActivityIndicator/>
            <Label TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Text="{x:Static Resource:ApplicationResource.FavouriteTownsPage_NoTownDataFound}" IsVisible="{Binding IsNoTownDataFound}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>